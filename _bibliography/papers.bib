	month = sep,
	year = {2024},
	note = {Publisher: Nature Publishing Group},
	keywords = {Biogeochemistry, Microbial ecology},
	pages = {1--9},
	file = {Full Text PDF:/Users/tacaro/Zotero/storage/JN436QG8/Foley et al. - 2024 - Growth rate as a link between microbial diversity and soil biogeochemistry.pdf:application/pdf},
