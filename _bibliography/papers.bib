	number = {4},
	urldate = {2021-01-24},
	journal = {Aerobiologia},
	author = {Caro, Tristan A. and Wendeln, Matthew and Freeland, Matthew and Bryan, Noelle and Waters, Samantha M. and McIntyre, Alexa and Nicoll, Patrick and Madronich, Sasha and Smith, David J.},
	month = dec,
